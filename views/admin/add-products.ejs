<% layout('layout') -%>

<div class="row">
  <div class="col-lg-6 col-md-offset-3">
    <% if (success.length > 0) { %>
      <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismmiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <%= success %>
      </div>
    <% } %>


    <form method="post" action='/api/add-products'>

      <h1> Add Products to Categories </h1>


      <div class="form-group">
        <label="name">Category Name: </label>

        <select class="form-control" id="sel1" name ='categoryName' placeholder ='Select a Category'>
          <option selected disabled>Please select</option>
          <% for(var i=0;i< categories.length;i++) { %>

          <option><%= categories[i].name %></option>
          <% } %>
        </select>
        <label="name">No of Products: </label>
        <input type="text" class="form-control" name="numberofItems">
      </div>
      <!-- <div class="form-group">
        <label="name">No of Items in that category: </label>
        <input type="text" class="form-control" name="numberofItems">
      </div> -->

      <button type="submit" class="btn btn-success">Submit</button>

    </form>
  </div>
</div>
