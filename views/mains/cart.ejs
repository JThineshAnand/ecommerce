<% layout('layout') -%>
<div class='container'>
  <div class='row'>
    <div class='col-lg-6'>
      <% if (success.length > 0) { %>
        <div class="alert alert-success alert-dismissible">
          <button type="button" class="close" data-dismmiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <%= success %>
        </div>
      <% } %>

      <% for( var i =0;i< foundCart.items.length;i++) { %>
          <div class='list-group'>
            <span class='list-group-item'>
              <div class='row'>
                <div class='col-md-3'>
                  <span><img id='productImage' src='<%= foundCart.items[i].item.image %>'></img></span>
                </div>
                <div class='col-md-3'>
                  <p class='list-group-item-heading'><%= foundCart.items[i].item.name %></p>
                </div>
                <div class='col-md-3'>
                </div>
                <div class='col-md-3'>
                  <p><%= foundCart.items[i].quantity %></p>
                  <p><%= foundCart.items[i].price %></p>
                  <form method="POST" action='/remove'>
                    <input type='hidden' value ='<%= foundCart.items[i]._id %>' name='item'></input>
                    <input type='hidden' value='<%= foundCart.items[i].item.price %>' name='price'></input>
                    <button class='btn btn-default' type='submit'>Remove</button>
                  </form>
                </div>

              </div>
            </span>



        </div>

        <div class="col-md-3"></div>

        <div class="col-md-3">
          <div class="list-group">
            <span class="list-group-item">
              <h4>Total: $<span class="totalPrice"><%= foundCart.total %></span></h4>

              <div class="form-group">
                <input type="hidden" value="<%= foundCart.total %>">
                <button type="submit" class="btn btn-primary btn-lg" id='stripepaybutton'>Pay with Stripe</button>
              </div>
            </span>

          </div>


        </div>
      </div>
    </div>
  </div>
