<% layout('layout') -%>



<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron" id="navbar-gap">
  <div class="container">
    <h1> Shop Smart, Save Big!</h1>
    <p>Starting point to create something more unique</p>
    <p><a class="btn btn-primary btn-lg" href="/signup" role="button">Signup &raquo;</a></p>
  </div>
</div>

<div class='container'>
  <div class = 'row'>
    <% for(var i =0; i< products.length; i++) { %>
    <div class='col-md-4'>
      <a href ='/product/<%= products[i]._id %>'>
        <div class='thumbnail'>
        <img src = '<%= products[i].image %>' />
        <div class='caption'>
          
          <h3><%= products[i].name %></h3>

          <p><%= products[i].price %></p>
        </div>
      </div>
      </a>
    </div>
    <% } %>
  </div>
</div>

<ul class='pagination text-center'>
  <% for(var i = 1;i< pages ; i++) { %>
  <%  if(i==1) { %>
  <li><a href='/'><%= i %></a></li>
  <% } else { %>
  <li><a href='/page/<%= i %>'><%= i %></a></li>
    <% }} %>
</ul>
