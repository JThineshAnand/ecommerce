<% layout('layout') -%>
<div class='container'>
  <div class = 'row'>

    <div class='col-md-4'>
      <img src = '<%= product.image %>' />
    </div>
    <div class='col-md-4'>

    </div>
    <div class='col-md-4'>

      <h3><%= product.name %></h3>
      <p>$ <%= product.price %></p>
      <p><%= product.description%></p>
      <form method='POST'>
        <div class='btn-group form-group' role='group' aria-label='...'>
          <input type='hidden' id='quantity' value='1' name='quantity'></input>
          <button type='button' id='minus' class='btn btn-default'>-</button>
          <button type='button' id='total' class='btn btn-default'>1</button>
          <button type='button' id='add' class='btn btn-default'>+</button>
        </div>
        <div class ='form-group'>
        <input type='hidden' id='itemID' value='<%= product._id %>' name='itemID'/>
        <input type='hidden' id='priceHidden' value='<%= product.price %>' name='itemPrice'/>
      </div>
      <div class ='form-group'>
        <input type='text' class ='form-control' value='<%= product.name %>' name='productName'/>
      </div>
      <div class ='form-group'>
        <input type='text' class ='form-control' id='totalPrice' value='<%= product.price %>' name='productPrice'/>
      </div>

        <% if(user) { %>
            <button class='btn btn-default' type='submit'>Add to Cart</button>
          <% } else { %>
            <a href='/signup'> Signup to add Products to Cart </a>
          <% } %>
      </form>
    </div>

  </div>
</div>
